<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sri.ai.praise.sgsolver.demo.QueryController">
	<top>
		<ToolBar style="-fx-background-color: null;" BorderPane.alignment="CENTER">
			<items>
				<Label text="Query" />
				<ComboBox fx:id="queryComboBox" editable="true" prefWidth="500.0" />
				<Separator orientation="VERTICAL" />
				<Button fx:id="executeButton" mnemonicParsing="false" onAction="#executeQuery" text="Execute">
					<tooltip>
						<Tooltip fx:id="executeTooltip" text="Run query" />
					</tooltip>
				</Button>
				<ProgressBar fx:id="queryProgressBar" prefWidth="200.0" progress="0.0" />
				<Separator orientation="VERTICAL" />	
				<Button fx:id="clearOutputButton" mnemonicParsing="false" onAction="#clearOutput" text="Clear">
					<tooltip>
						<Tooltip text="Clear Output" />
					</tooltip>
				</Button>
				<Separator orientation="VERTICAL" />
			</items>
		</ToolBar>
	</top>
	<center>
		<TabPane fx:id="outputTabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
			<tabs>
				<Tab text="Result">
					<content>
						<AnchorPane fx:id="resultPane">
                     <children>
                        <TextArea fx:id="resultTextArea" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children></AnchorPane>
					</content>
				</Tab>
				<Tab text="Problems">
					<content>
						<AnchorPane fx:id="problemPane" />
					</content>
				</Tab>
				<Tab text="Console">
					<content>
						<AnchorPane fx:id="consolePane" />
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</center>
</BorderPane>
